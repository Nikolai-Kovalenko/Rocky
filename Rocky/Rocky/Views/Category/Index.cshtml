@model IEnumerable<Rocky.Models.Category>

<div class="conteiner p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Categoty List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                Create new Category
            </a>
        </div>
    </div>

    <br /><br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
        <tread>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </tread>
        <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td wight="50%">@obj.Name</td>
                        <td wight="30%">@obj.DisplayOrder</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Category exists.</p>
    }

</div>

    